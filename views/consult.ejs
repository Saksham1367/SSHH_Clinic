<% layout("boilerplate") %>
<body>
    <h1 class="new-head mt-3">Enter the new Listing</h1>
    <div class="row offset-2">
        <div class="col-8">
            <form action="/consult" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text", name="username" placeholder="Enter Username" id="username" class="form-control" required>
                    <div class="valid-feedback">Nicely Done!!</div>
                    <div class="invalid-feedback">Please Enter A Valid Username!!</div>
                </div>   
                <div class="mb-3">
                    <label for="number"  class="form-label">Phone Number</label>
                    <input type="number", name="number" placeholder="Enter your Phone Number" id="number" class="form-control" required>
                    <div class="valid-feedback">Nicely Done!!</div>
                    <div class="invalid-feedback">Please Enter A Valid Phone Number!!</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4 col-sm-12">
                        <label for="age" class="form-label">Age</label>
                        <input type="number", name="age" placeholder=" Enter your Age" id="age"  class="form-control" required>
                        <div class="valid-feedback">Nicely Done!!</div>
                        <div class="invalid-feedback">Please Enter A Valid Age!!</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="email" class="form-label">Email</label>
                        <input type="email", name="email" placeholder="enter your Email" id="email"  class="form-control">
                    </div>
                </div >
                <div class="row">
                    <div class="mb-3 col-md-8">
                        <label class="form-label">Gender</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="male" value="male">
                            <label class="form-check-label" for="male">Male</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="female" value="female">
                            <label class="form-check-label" for="female">Female</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="others" value="others">
                            <label class="form-check-label" for="others">Others</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="gender" id="nan" value="nan">
                            <label class="form-check-label" for="nan">NAN</label>
                        </div>
                    </div>
                    <div class="mb-3 col-md-4 col-sm-12">
                        <label for="consult" class="form-label">Select Diseases You want To consult For: </label>
                        <select class="form-select" aria-label="Default select example" id="consult" name="consult">
                            <option selected>Choose Diseases</option>
                            <option value="General Health Issues">General Health Issues</option>
                            <option value="Respiratory Problems">Respiratory Problems</option>
                            <option value="Digestive Disorders">Digestive Disorders</option>
                            <option value="Skin Conditions">Skin Conditions</option>
                            <option value="Joint and Muscular Problems">Joint and Muscular Problems</option>
                            <option value="Mental Health">Mental Health</option>
                            <option value="Women Health">Women Health</option>
                            <option value="Children Health">Children Health</option>
                            <option value="Chronic Conditions">Chronic Conditions</option>
                            <option value="ENT Problems">ENT Problems</option>
                            <option value="Urinary Issues">Urinary Issues</option>
                            <option value="Other Conditions">Chronic Conditions</option>
                          </select>
                        <div class="valid-feedback">Nicely Done!!</div>
                        <div class="invalid-feedback">Please Select A Disease!!</div>
                    </div>
                </div>   
                <button class="btn btn-dark btn-lg add-btn mt-3">Consult Now</button>
            </form>
            <a href="/" class="btn btn-dark btn-lg add-btn offset-5 mt-4">Back</a>
            <br><br>
        </div>
    </div>

</body>
